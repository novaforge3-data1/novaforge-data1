<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
 
<beans>
	
			
	<!-- fichier de message pour les actions -->
    <bean id="forge-actionResourceBundles" class="org.alfresco.i18n.ResourceBundleBootstrapComponent">
    	<property name="resourceBundles">
    		<list>
    			<value>alfresco.module.${project.artifactId}.messages.forge-action</value>
    		</list>
    	</property>
   </bean>

   <!-- action bean to populate site project -->
   <bean id="populate-site"   class="org.novaforge.forge.plugin.alfresco.action.ActionPopulateSiteExecuter" parent="action-executer">
      <property name="publicAction" value="false" />
      <property name="nodeService">
         <ref bean="NodeService" />
      </property>
      <property name="fileFolderService">
         <ref bean="FileFolderService" />
      </property>
      <property name="searchService" ref="SearchService" />
   </bean>

</beans>
